<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title"><span uk-icon="tag"></span>Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url"><span uk-icon="link"></span>Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn"><span uk-icon="plus-circle"></span>Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2><span uk-icon="pencil"></span>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link"><span uk-icon="settings"></span>Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>