        {{/if}}
      </nav>
      <h1>
        <a href="/" class="uk-heading-line"><span uk-icon="world">Tech Blog</span></a>
      </h1>
    </header>
    <main>
      {{{ body }}}
    </main>
    <footer>
      Thanks for visiting!
    </footer>
  </div>
  
  {{#if loggedIn}}
  <script src="/javascript/logout.js"></script>

  {{/if}}
</body>
<script src="https://cdn.jsdelivr.net/npm/uikit@3.14.3/dist/js/uikit.min.js"></script>
